<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Albums</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>

<body>
    <%- include('../layout/navbar') %>

    <form action="/create-album" method="post">
        <input type="text" name="name" placeholder="Album name">

        <input type="checkbox" name="isPrivate" checked> Private album

        <input type="submit" value="Create">
    </form>

    <div class="albums d-flex p-3 gap-3">
        <% albums.forEach(album => { %>
        <div class="card" style="width: 18rem;">
            <img src="..." class="card-img-top" alt="...">
            <p><%= album.isPrivate ? 'Private' : 'Public' %></p>
            <div class="card-body">
                <h5 class="card-title"><%= album.name %></h5>
                <a href="/albums/<%= album._id %>" class="card-link">Ver Album</a>
                <a href="#" class="btn btn-primary">Go somewhere</a>
            </div>
        </div>
        <div>
        </div>
        <% }); %>
    </div>
</body>

</html>